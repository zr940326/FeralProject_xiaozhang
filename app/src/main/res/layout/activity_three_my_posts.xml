<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".PostsTwo">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/posts_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:padding="8dp"
            android:src="@drawable/rub_course_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:gravity="center"
            android:text="我的帖子"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/posts_build_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32px"
            android:padding="8dp"
            android:src="@drawable/rub_course_build_post_pen" />


    </LinearLayout>

    <ListView
        android:id="@+id/posts_listview"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/posts_listview_line"
        android:dividerHeight="1dp"
        android:background="#fff000"
        android:layout_below="@id/line"
        ></ListView>


</RelativeLayout>

